{
  "name": "nest-template",
  "version": "0.1.0",
  "description": "NestJS API project template crafted for Docker environments",
  "author": "Saluki",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf ./dist",
    "start": "node dist/server.js",
    "dev": "env-cmd .env nodemon",
    "build": "npm run clean && tsc",
    "build:docker": "NODE_ENV=development npm install && npm run build",
    "test": "env-cmd .env jest --config=jest.json --notify",
    "lint": "tslint -p tsconfig.json -c tslint.json 'src/**/*.ts'",
    "migration:create": "env-cmd .env rm -typeorm migration:create -n",
    "migration:run": "env-cmd .env ts-node ./node_modules/.bin/typeorm migration:run",
    "migration:revert": "env-cmd .env ts-node ./node_modules/.bin/typeorm migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.2",
    "@nestjs/core": "^6.0.2",
    "@nestjs/platform-express": "^6.0.2",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/testing": "^6.0.2",
    "@nestjs/typeorm": "^6.0.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "helmet": "^3.16.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "mysql": "^2.16.0",
    "reflect-metadata": "0.1.12",
    "rxjs": "^6.4.0",
    "swagger-ui-express": "^4.0.2",
    "typeorm": "^0.2.15",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/joi": "^14.3.2",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/lodash": "^4.14.123",
    "@types/node": "^11.11.5",
    "@types/supertest": "^2.0.7",
    "@types/winston": "^2.4.4",
    "@types/helmet": "^0.0.43",
    "env-cmd": "^8.0.2",
    "jest": "^24.5.0",
    "nodemon": "^1.18.10",
    "rimraf": "^2.6.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.4000",
    "tslint": "^5.14.0"
  }
}
