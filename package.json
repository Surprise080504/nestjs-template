        "jest": "^23.1.0",
        "nodemon": "^1.17.5",
        "supertest": "^3.1.0",
        "ts-jest": "^22.4.6",
        "ts-node": "^6.1.0",
        "typescript": "^2.9.1",
        "tslint": "^5.10.0"
    }
}
