{
    "name": "nest-template",
    "version": "0.1.0",
    "description": "NestJS API project template crafted for Docker environments",
    "author": "Saluki",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "node dist/server.js",
        "dev": "env-cmd .env nodemon",
