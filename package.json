{
    "name": "nest-template",
    "version": "0.1.0",
    "description": "NestJS API project template crafted for Docker environments",
    "author": "Saluki",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "node dist/server.js",
        "dev": "env-cmd .env nodemon",
        "build": "tsc",
        "build:docker": "NODE_ENV=development npm install && npm run build",
        "test": "env-cmd .env jest --config=jest.json --notify",
        "lint": "tslint -p tsconfig.json -c tslint.json 'src/**/*.ts'",
        "migration:create": "env-cmd .env rm -typeorm migration:create -n",
        "migration:run": "env-cmd .env ts-node ./node_modules/.bin/typeorm migration:run",
        "migration:revert": "env-cmd .env ts-node ./node_modules/.bin/typeorm migration:revert"
    },
    "dependencies": {
        "@nestjs/common": "^5.1.0",
        "@nestjs/core": "^5.1.0",
        "@nestjs/swagger": "^2.2.0",
        "@nestjs/testing": "^5.1.0",
        "@nestjs/typeorm": "^5.1.0",
        "body-parser": "^1.18.3",
        "cors": "^2.8.4",
        "express": "^4.16.3",
        "helmet": "^3.13.0",
        "joi": "^13.5.2",
        "jsonwebtoken": "^8.3.0",
        "lodash": "^4.17.10",
        "mysql": "^2.16.0",
        "reflect-metadata": "^0.1.12",
        "rxjs": "^6.2.2",
        "typeorm": "^0.2.7",
        "winston": "^3.0.0"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.0",
        "@types/cors": "^2.8.4",
        "@types/express": "^4.16.0",
        "@types/jest": "^23.3.1",
        "@types/joi": "^13.4.0",
        "@types/jsonwebtoken": "^7.2.8",
        "@types/lodash": "^4.14.115",
        "@types/node": "^10.5.5",
        "@types/supertest": "^2.0.5",
        "@types/winston": "^2.3.9",
        "@types/helmet": "^0.0.38",
        "env-cmd": "^8.0.2",
        "jest": "^23.4.2",
        "nodemon": "^1.18.3",
        "supertest": "^3.1.0",
        "ts-jest": "^23.0.1",
        "ts-node": "^7.0.0",
        "typescript": "^3.0.1",
        "tslint": "^5.11.0"
    }
}
