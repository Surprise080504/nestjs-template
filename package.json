{
  "name": "nest-template",
  "version": "0.1.0",
  "description": "NestJS API project template crafted for Docker environments",
  "author": "Saluki",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf ./dist",
    "start": "node dist/server.js",
    "dev": "env-cmd .env nodemon",
    "build": "npm run clean && tsc",
    "build:docker": "NODE_ENV=development npm install && npm run build",
    "test": "env-cmd .env jest --config=jest.json --notify",
    "lint": "tslint -p tsconfig.json -c tslint.json 'src/**/*.ts'",
    "migration:create": "env-cmd .env rm -typeorm migration:create -n",
    "migration:run": "env-cmd .env ts-node ./node_modules/.bin/typeorm migration:run",
    "migration:revert": "env-cmd .env ts-node ./node_modules/.bin/typeorm migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "^5.3.5",
    "@nestjs/core": "^5.3.4",
    "@nestjs/swagger": "^2.5.1",
    "@nestjs/testing": "^5.3.1",
    "@nestjs/typeorm": "^5.2.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "helmet": "^3.13.0",
    "joi": "^13.6.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.10",
    "mysql": "^2.16.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.2",
    "typeorm": "^0.2.7",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/joi": "^13.4.4",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.9.4",
    "@types/supertest": "^2.0.5",
    "@types/winston": "^2.4.4",
    "@types/helmet": "^0.0.40",
    "env-cmd": "^8.0.2",
    "jest": "^23.5.0",
    "nodemon": "^1.18.4",
    "rimraf": "^2.6.2",
    "supertest": "^3.2.0",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3",
    "tslint": "^5.11.0"
  }
}
