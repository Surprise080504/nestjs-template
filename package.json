        "lint": "tslint -p tsconfig.json -c tslint.json 'src/**/*.ts'"
    },
    "dependencies": {
        "@nestjs/common": "^5.0.1",
        "@nestjs/core": "^5.0.1",
        "@nestjs/testing": "^5.0.1",
        "@nestjs/swagger": "^2.0.2",
        "body-parser": "^1.18.3",
        "cors": "^2.8.4",
        "joi": "^13.3.0",
        "jsonwebtoken": "^8.2.2",
        "lodash": "^4.17.10",
        "mysql": "^2.15.0",
        "reflect-metadata": "^0.1.12",
        "rxjs": "^6.2.0",
        "typeorm": "^0.2.6",
        "winston": "^2.4.2",
        "express": "^4.16.3",
        "helmet": "^3.12.1"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.0",
        "@types/cors": "^2.8.4",
        "@types/express": "^4.11.1",
        "@types/jest": "^23.0.0",
        "@types/joi": "^13.0.8",
        "@types/jsonwebtoken": "^7.2.7",
